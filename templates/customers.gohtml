<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Customer</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;
        }
        body {
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            align-items: left;
            height: 100vh;
        }
        p, table, th, td, form {
            margin-left: 4rem;
            font-size: 2rem;
            color: black;
          }
        .link {
            font-size: 1rem;
        }
    </style>
</head>
<body>

    <form method="post" action="/customers/search">
        <input type="text" name="srch_first" placeholder="srch_first">
        <input type="text" name="srch_last" placeholder="srch_last">  
    
        <input type="submit">
    </form>
    <p class="link"><a href="/customers">All Customer</a></p>

<table>
    <tr>
        <th><a href="/customers/order?ord=id">Id</a></th>
        <th><a href="/customers/order?ord=first_name">First name</a></th>
        <th><a href="/customers/order?ord=last_name">Last name</a></th>
    </tr>
    {{ range .}}
        <tr>
            <td><a href="/customers/show?id={{.Id}}">{{.Id}}</a></td>
            <td>{{ .First_name }}</td>
            <td>{{ .Last_name }}</td>
            <td><a href="/customers/edit?id={{.Id}}">edit</a></td>
            <td><a href="/customers/delete/process?id={{.Id}}">delete</a></td>
        </tr>
    {{ end}}
</table>

<p class="link"><a href="/customers/create">Insert A Customer</a></p>
</body>
</html>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Customer</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;
        }
        body {
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            align-items: left;
            height: 100vh;
        }
        p, table, th, td {
            margin-left: 4rem;
            font-size: 2rem;
            color: black;
          }
        .link {
            font-size: 1rem;
        }
    </style>
</head>
<body>

<table>
    <tr>
        <th>Id</th>
        <th>First name</th>
        <th>Last name</th>
    </tr>
    {{ range .}}
        <tr>
            <td><a href="/customers/show?id={{.Id}}">{{.Id}}</a></td>
            <td>{{ .First_name }}</td>
            <td>{{ .Last_name }}</td>
            <td><a href="/customers/edit?id={{.Id}}">edit</a></td>
            <td><a href="/customers/delete/process?id={{.Id}}">delete</a></td>
        </tr>
    {{ end}}
</table>

<p class="link"><a href="/customers/create">Insert A Customer</a></p>
</body>
</html>
